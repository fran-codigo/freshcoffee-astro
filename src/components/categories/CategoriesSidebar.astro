---
import Logo from '@/assets/logo.svg';
import { CategoriesSchema } from '@/types';
import CategoryCard from './CategoryCard.astro';
const url = `${import.meta.env.API_URL}/freshcoffee_categories/`;
const res = await fetch(url);
const json = await res.json();
const categories = CategoriesSchema.parse(json);
---

<aside
  class="md:w-80 md:h-screen md:overflow-y-scroll border-r border-gray-200"
>
  <div class="flex items-center justify-center p-5">
    <Logo />
  </div>

  {categories.map((category) => <CategoryCard category={category} />)}
</aside>
