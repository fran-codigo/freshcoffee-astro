---
import '@/styles/global.css';
interface Props {
  title?: string;
}
const { title = '' }: Props = Astro.props;
---

<!doctype html>
<html
  lang="es"
  class="h-full bg-white"
>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/favicon.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <title>Fresh Coffee - {title}</title>
  </head>
  <body class="h-full">
    <slot />
  </body>
</html>
